
@{
    ViewBag.Title = "SweetAlert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3> Örnek sweet alert kullanımları</h3>
<br />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<button class="btn btn-primary" id="btn1">Button 1</button>
<button class="btn btn-warning" id="btn2">Button 2</button>
<button class="btn btn-danger" id="btn3">Button 3</button>

<script>
    $('#btn1').click(function () {
        swal("MVC Proje Kampı");
    });
</script>
<script>
    $('#btn2').click(function () {
        swal("MVC Proje Kampı!", "...Sözlük siteme hoş geldiniz");
    });
</script>
<script>
    $('#btn3').click(function () {
        swal("Tebrikler!", "Başarılı bir şekilde eklendi!", "success");
    });
</script>