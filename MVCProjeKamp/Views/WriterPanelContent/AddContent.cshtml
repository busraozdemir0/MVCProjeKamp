@model EntityLayer.Concrete.Content
@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<h1>İçerik Girişi</h1>
@using (Html.BeginForm("AddContent", "WriterPanelContent", FormMethod.Post))
{   
    <div class="form-group">
        @*<input type="text" name="HeadingID" values="@ViewBag.headingID" />*@
        @Html.HiddenFor(x => x.HeadingID, new { @Value = @ViewBag.headingID })
        @Html.Label("Bu başlığa yazın")
        @Html.TextAreaFor(x => x.ContentValue, 10, 30, new { @class = "form-control" })
        <br />

        <button type="submit" class="btn btn-info">Kaydet</button>
    </div>
}
<script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>


